{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",

		"target": "es6",
		"allowJs": true,
		"jsx": "react",

		"rootDir": "src",
		"outDir": "build/unbundled",
		"inlineSourceMap": true,
		"inlineSources": true,

		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
//    "noUnusedLocals": true,

		"typeRoots": [
			"./@types",
			"./node_modules/@types"
		],

		"pretty": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}
